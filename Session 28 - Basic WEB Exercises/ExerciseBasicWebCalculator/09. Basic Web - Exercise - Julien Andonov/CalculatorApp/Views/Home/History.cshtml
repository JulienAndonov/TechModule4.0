@model List<CalculatorApp.Models.Calculator>

@{
    ViewData["Title"] = "History";
}

<h2>History</h2>

@foreach (var calculator in Model)
{
    <div class="container">
        <div class="col-sm-1">
            @calculator.LeftOperand
        </div>
        <div class="col-sm-1">
            @calculator.Operator
        </div>
        <div class="col-sm-1">
            @calculator.RightOperand
        </div>
        <div class="col-sm-1">
            <p>=</p>
        </div>
        <div class="col-sm-1">
            @calculator.Result
        </div>
    </div>
}

    <div>
        @TempData["HistoryCleared"]
    </div>

@using (Html.BeginForm("Clear", "Home", FormMethod.Post))
{
    <div class="col-sm-4 col-sm-offset-4">
        <button type="submit" class="btn btn-primary">Clear</button>
    </div>
}